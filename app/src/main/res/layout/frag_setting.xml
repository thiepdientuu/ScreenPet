<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#FFB300"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAnimTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animation Control"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivGhost"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_launcher_background"
                        app:tint="#42A5F5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAnimTitle" />

                    <TextView
                        android:id="@+id/tvGhostMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Ghost mode"
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ivGhost"
                        app:layout_constraintEnd_toStartOf="@id/switchGhost"
                        app:layout_constraintStart_toEndOf="@id/ivGhost"
                        app:layout_constraintTop_toTopOf="@id/ivGhost" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchGhost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/ivGhost"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivGhost" />

                    <TextView
                        android:id="@+id/tvGhostDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="When you select this mode, you will not be able to interact with the character on the screen."
                        android:textColor="#7F8C8D"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivGhost" />

                    <View
                        android:id="@+id/div1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/tvGhostDesc" />

                    <ImageView
                        android:id="@+id/ivSize"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_launcher_background"
                        app:tint="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/div1" />

                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Size"
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivSize"
                        app:layout_constraintStart_toEndOf="@id/ivSize"
                        app:layout_constraintTop_toTopOf="@id/ivSize" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekBarSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:progressTint="#3F51B5"
                        android:thumbTint="#3F51B5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvSize"
                        app:layout_constraintTop_toBottomOf="@id/tvSize" />

                    <View
                        android:id="@+id/div2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/seekBarSize" />

                    <ImageView
                        android:id="@+id/ivSpeed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_launcher_background"
                        app:tint="#FF9800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/div2" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Speed"
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivSpeed"
                        app:layout_constraintStart_toEndOf="@id/ivSpeed"
                        app:layout_constraintTop_toTopOf="@id/ivSpeed" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekBarSpeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:progressTint="#3F51B5"
                        android:thumbTint="#3F51B5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvSpeed"
                        app:layout_constraintTop_toBottomOf="@id/tvSpeed" />

                    <View
                        android:id="@+id/div3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/seekBarSpeed" />

                    <ImageView
                        android:id="@+id/ivDuration"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_launcher_background"
                        app:tint="#9C27B0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/div3" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Duration"
                        android:textColor="#2C3E50"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivDuration"
                        app:layout_constraintStart_toEndOf="@id/ivDuration"
                        app:layout_constraintTop_toTopOf="@id/ivDuration" />

                    <ImageView
                        android:id="@+id/ivArrowDuration"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_media_next"
                        app:tint="#3F51B5"
                        app:layout_constraintBottom_toBottomOf="@id/ivDuration"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivDuration" />

                    <TextView
                        android:id="@+id/tvDurationValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="5 minutes"
                        android:textColor="#7F8C8D"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivDuration"
                        app:layout_constraintEnd_toStartOf="@id/ivArrowDuration"
                        app:layout_constraintTop_toTopOf="@id/ivDuration" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#FFB300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <RelativeLayout
                        android:id="@+id/btnLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivLang"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_launcher_background"
                            app:tint="#5C6BC0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/ivLang"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:text="Language"
                            android:textColor="#2C3E50"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#E91E63"/>
                    </RelativeLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                    <RelativeLayout
                        android:id="@+id/btnFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivFeed"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_launcher_background"
                            app:tint="#03A9F4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/ivFeed"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:text="Send Feedback"
                            android:textColor="#2C3E50"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#E91E63"/>
                    </RelativeLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                    <RelativeLayout
                        android:id="@+id/btnRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivRate"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_launcher_background"
                            app:tint="#FFCA28"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/ivRate"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:text="Rate us"
                            android:textColor="#2C3E50"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#E91E63"/>
                    </RelativeLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                    <RelativeLayout
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivShare"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_launcher_background"
                            app:tint="#E91E63"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/ivShare"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:text="Share App"
                            android:textColor="#2C3E50"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_media_next"
                            app:tint="#E91E63"/>
                    </RelativeLayout>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>