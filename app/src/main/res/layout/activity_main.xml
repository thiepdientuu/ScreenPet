<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shimeji Control Center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnStartInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bắt đầu Shimeji"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/btnStopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tắt Shimeji"
            android:backgroundTint="#F44336"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lưu ý: Bạn cần cấp quyền 'Hiển thị trên ứng dụng khác' để app hoạt động."
            android:gravity="center"
            android:textColor="#757575"/>

    </LinearLayout>
</layout>